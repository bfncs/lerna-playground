{
  "name": "javascript-monorepo",
  "scripts": {
    "cleanup": "lerna run cleanup && lerna clean",
    "create-app": "cd websites && create-react-app --",
    "create-component": "create-react-component --scope org --base-path packages --template-path templates/react-component-template --",
    "diff": "lerna diff --",
    "lint": "eslint --ext .js --ext .jsx .",
    "postinstall": "yarn lernaCompileHack && lerna bootstrap",
    "release": "yarn lernaCompileHack && yarn lint && yarn test && lerna publish",
    "styleguide": "styleguidist server",
    "test": "lerna run test",
    "updated": "lerna updated",
    "lernaCompileHack": "cd node_modules/lerna && yarn"
  },
  "dependencies": {
    "@fuglu/create-react-component": "^1.0.1",
    "babel-eslint": "^7.2.1",
    "create-react-app": "^1.3.0",
    "eslint": "^3.17.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "lerna": "lerna/lerna",
    "loaders": "^1.1.3",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-styleguidist": "^5.0.6",
    "webpack": "^2.3.3"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb"
    ],
    "plugins": [
      "react",
      "jsx-a11y",
      "import"
    ],
    "env": {
      "browser": true,
      "jest": true
    },
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/*.test.js*"
          ]
        }
      ]
    }
  }
}
